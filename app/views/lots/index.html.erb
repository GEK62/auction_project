<h1 class="text-center">Welcome to Auction</h1>

<p id="notice"><%= notice %></p>

<table class="table table-dark table-striped">
  <thead>
    <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Price</th>
    <th>Fast buy price</th>
    <th>End date</th>
    <th>Images</th>
    <th>Lot owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
        <td><%= lot.name %></td>
        <td><%= lot.description %></td>
        <td><%= lot.category_group.categories.first.title %></td>
        <td><%= lot.start_price %>$</td>
        <td><%= lot.fast_buy_price %>$</td>
        <td><%= lot.end_date.strftime("%d.%m.%Y") %></td>
        <td><%= image_tag lot.images.first, width: "200px", height: "200px" %></td>
        <td><%= lot.user_id %></td>

        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lot', new_lot_path %>