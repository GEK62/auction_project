<%= form_with(model: lot) do |f| %>
  <% if lot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

      <ul>
        <% lot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, minlength: 3, maxlength: 50, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, minlength: 3, maxlength: 100, class:"form-control" %> 
  </div>

  <div class="field form-group">
    <%= f.label :start_price %>
    <%= f.number_field :start_price, required: true, min: 1, max: 9999999999, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :fast_buy_price %>
    <%= f.number_field :fast_buy_price, required: true, min: 5, max: 9999999999, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, required: true, class:"form-control" %>
  </div>
<br/>
  <div class="dropdown">
    <%= f.label :category, class:"label-dropdown" %><br/>
    <%= f.collection_select :category_id, @categories, :id, :title, required: true, class:"dropdown" %>
  </div>
<br/>
  <div class="mb-3">
    <%= f.label :images, class:"form-label" %>
    <%= f.file_field :images, class:"form-control", multiple: true %>
  </div>

    <% f.label :user_id %>
    <%= f.number_field :user_id, id: :lot_user_id, value: current_user.id, class:"form-control", type: :hidden %>

  <div class="field form-group">
    <%= f.submit "Create", class:"btn btn-warning" %>
  </div>

<% end %>
